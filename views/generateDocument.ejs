<!DOCTYPE html>
<html>
    <head>
        <title>
            Generate Reports
        </title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/style.css" />
        <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.1/css/bootstrap.min.css" /> -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script> -->
</head>

<body>
        
          <form class="container1" style="text-align: center" action="/login/staffAdvLogin/generateDoc" method="POST">
            <h1>Generate Reports</h1>
          
            <label for="date">Date :</label>
            <input type="date" name="date" placeholder="dd-mm-yyyy" value=""  min="1997-01-01" max="2050-12-31"><br><br>

            <label for="sports">Select Sports </label>
            <select name="sports" placeholder="select Sports">
              <option name="" value="" style="display: none">Select Sports</option>
              <option name="sports" value="cricket">Cricket</option>
              <option name="sports" value="football">Football</option>
              <option name="sports" value="badminton">Badminton</option>
              <option name="sports" value="basketball">Basketball</option>
              <option name="sports" value="Kabbdi">Kabbdi</option>
              <option name="sports" value="Kho-kho">Kho-kho</option>
              <option name="sports" value="Chess">Chess</option>
              <option name="sports" value="Swimming">Swimming</option>
              <option name="sports" value="Table Tennis">Table Tennis</option>
            </select>
            <br><br>
           <label for="level">Select Level </label> 
            <select name="level" placeholder="Level ">
              <option name="" value="" style="display: none">Select Level:</option>
              <option name="sports" value="Zonal">Zonal</option>
              <option name="sports" value="Inter-zonal">Inter-zonal</option>
              <option name="sports" value="State">State</option>
              <option name="sports" value="National">National</option>
              <option name="sports" value="Inter National">Inter National</option>
            </select>
            <br><br>
            <label for="participants">Participants</label>
            <input type="text" name="pcount" id="pcount" placeholder="Participated players count">

            <br><br>
            <label for="qualified">Qualified</label>
            <input type="text" name="qcount" id="qcount">

            <h4><label for="medals">Total Medals Won</label></h4> 

            <label for="gold"s>Gold</label>
            <input type="number" id="goldcount" name="goldcount" min="0" max="5">

            <label for="silver">Silver</label>
            <input type="number" id="silvercount" name="silvercount" min="0" max="5">

            <label for="bronze">Bronze</label>
            <input type="number" id="bronzecount" name="bronzecount" min="0" max="5"><br><br>

            <label for="gender">Select Gender   </label>
            <input type="radio" name="gender" value="male">Male
            <input type="radio" name="gender" value="female">Female
            <br><br>
           
            <div class="container-fluid mt-3">
              <div class="row my-4">
                  <div class="col-lg-10 mx-auto">
                          <h4>Add Items</h4>
                  </div>

                  <div class="card-body">
                      <div id="show_player" class="parent">
                          <div class="row align-items-start">  
                              <div class="col-sm-5">
                                      <input type="text" name="playername[]" class="form-control" placeholder="Player Name" required>
                                  </div>
                                  <div class="col-sm-5">
                                      <input type="text" name="classnm[]" class="form-control " placeholder="Class Name" required>
                                  </div>
                                  <div class="col-2">
                                     <button class="btn btn-success add_palyer_btn">Add More</button>
                                  </div>
                          </div>
                      </div>
                      <div>
                          <input type="submit" value="Add" class="btn btn-primary w-20" id="add-btn submit">
                      </div>
                  </div>
              </div>
          </div>
         
          </form>     
    </body>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
      $(document).ready(function () {
        $(".add_palyer_btn").click(function (e) {
          e.preventDefault();
          $("#show_player").prepend( ` <div id="show_player" class="parent">
                            <div class="row">  
                                <div class="col-md-4 mb-3">
                                        <input type="text" name="playername[]" class="form-control" placeholder="Player Name" required>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <input type="text" name="classnm[]" class="form-control" placeholder="Class Name" required>
                                    </div>
                                    <div class="col-md-2 mb-3 d-grid">
                                       <button class="btn btn-danger remove_palyer_btn">Remove Player</button>
                                    </div>
                            </div>
                        </div>`);
        });

        $(document).on("click", ".remove_palyer_btn", function (e) {
          e.preventDefault();
          let row = $(this).parent().parent();
          $(row).remove();
        });

        $("#Gen_doc").submit(function (e) {
          e.preventDefault();
          $("#submit").val("Adding..");
          $.ajax({
            url: "/login/staffAdvLogin/generateDoc",
            method: "post",
            data: $(this).serialize(),
            success: function (response) {
              console.log(response);
            },
          });
        });
      });
    </script>

</html>